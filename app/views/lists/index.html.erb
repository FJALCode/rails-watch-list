<div class="home-banner" style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1170&q=80')">
  <h1>Movie Theater</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>
<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success m-4", style: "color:white" %>
  </div>
  <%# <div class="row m-4"> %>
  <% if @lists.size >0 %>
    <h2>My List</h2>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col col-sm-12 col-md-6 col-lg-4 col-xl-3 m-2" data-aos="zoom-in">
          <%# <div class="col m-4"> %>
          <%= link_to list do %>
            <div class="card bg-dark text-white" style="width: 18rem;">
              <%= image_tag("https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=870&q=80", class: "card-img", style:"opacity: 0.5" ) %>
              <div class="card-img-overlay text-center">
                <h3 class="card-title"><%= list.name %></h3>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>
